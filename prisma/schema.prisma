// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  uid        String    @unique
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @map("updated_at")
  name       String?   @unique
  // 0 封禁 1 未审核 2 通过
  state      Int       @default(1)
  account    String    @unique
  password   String

  profile    Profile?
}

model File {
  id   Int    @id @default(autoincrement())
  hash String @unique
  name String
  url  String
  size String
  type String
}

model Profile {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  name        String   @unique
  background  String   @default("transparent")
  color       String   @default("#ffffff")
  description String?
  avatar      String?
  styles      String?

  contact     Json?

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

model Card {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")

	sort  Int
	icon  Json
	size  String
	link  String
	buttonStyle String
	image String

 // 纯颜色 渐变色 背景图
	background String
}


